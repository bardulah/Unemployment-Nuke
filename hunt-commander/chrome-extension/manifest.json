{
  "manifest_version": 3,
  "name": "Hunt Commander - One-Click Apply",
  "version": "1.0.0",
  "description": "Auto-fill job applications and track them in Hunt Commander",
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://*.profesia.sk/*",
    "https://*.linkedin.com/*",
    "http://localhost:8000/*",
    "https://hunt.curak.xyz/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.profesia.sk/*",
        "https://*.linkedin.com/jobs/*"
      ],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
